        private void berekenTijd_Click(object sender, EventArgs e)
        {
            int startSeconde =  Convert.ToInt32(inputSeconden.Text);
            int uren = startSeconde / 3600;
            int tussenSeconde = startSeconde - uren * 3600;
            int minuten = tussenSeconde / 60;
            int seconden = tussenSeconde - minuten * 60;
            outputTijd.Text = Convert.ToString(uren) + ":" + Convert.ToString(minuten) + ":" + Convert.ToString(seconden);

        }
    }
