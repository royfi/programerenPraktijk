        private void bedragenBerekenen_Click(object sender, EventArgs e)
        {
            double afstandDouble = Convert.ToDouble(inputEind.Text) - Convert.ToDouble(inputBegin.Text);
            double prijsDouble = afstandDouble * Convert.ToDouble(inputPrijs.Text);
            double btwDouble = prijsDouble * 0.21;
            double totaalPrijsDouble = prijsDouble * btwDouble;
            prijs.Text = Convert.ToString(prijsDouble);
            btw.Text = Convert.ToString(btwDouble);
            totaalPrijs.Text = Convert.ToString(totaalPrijsDouble);
        }

