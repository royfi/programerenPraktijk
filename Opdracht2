using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Opdracht2
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.Write("Voer getal1 in ");
            string invoer1 = Console.ReadLine();
            Console.Write("voer getal2 in ");
            string invoer2 = Console.ReadLine();
            Console.Write("Voer getal3 in ");
            string invoer3=Console.ReadLine();
            int getal1 = Int32.Parse(invoer1);
            int getal2 = Int32.Parse(invoer2);
            int getal3 = Int32.Parse(invoer3);
            int gemiddelde = (getal1 + getal2 + getal3) / 3;
            Console.Write("Gemiddelde " + gemiddelde);
            Console.ReadKey();


        }
    }
}
