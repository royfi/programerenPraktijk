        private void button1_Click(object sender, EventArgs e)
        {   double btw = 0.21;
            string invoer = textBox1.Text;
            double prijs = double.Parse(invoer);
            double prijsBtw = btw * prijs;
            double totaalPrijs = prijsBtw + prijs;

            label5.Text = Convert.ToString(prijs);
            label6.Text = Convert.ToString(prijsBtw);
            label7.Text = Convert.ToString(totaalPrijs);




        }

